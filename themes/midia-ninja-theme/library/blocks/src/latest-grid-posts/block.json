{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "ninja/latest-grid-posts",
    "version": "0.1.1",
    "title": "Últimos posts (Grid)",
    "category": "widgets",
    "icon": "format-image",
    "description": "Exibe os últimos posts em formato de grid com paginação",
    "attributes": {
        "blockId": {
            "type": "string"
        },
        "postType": {
            "type": "string",
            "default": "post"
        },
        "postsPerPage": {
            "type": "number",
            "default": 10
        },
        "postsToShow": {
            "type": "number",
            "default": 20
        },
        "queryTerms": {
			"type": "array"
		},
        "showAuthor": {
            "type": "boolean",
            "default": false
        },
        "showDate": {
            "type": "boolean",
            "default": false
        },
        "showExcerpt": {
            "type": "boolean",
            "default": false
        },
        "taxonomy": {
            "type": "string"
        }
    },
    "supports": {
        "html": false,
        "anchor": true
    },
    "usesContext": [],
    "textdomain": "ninja",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}